      <!-- End Navbar -->
      <div class="panel-header panel-header">
        <!--canvas id="bigDashboardChart"></canvas-->
        <div class="header text-center">
          <h2 class="title">Bienvenue sur RFID Campus System</h2>
          <h5 class="title">Mon code permanent: <b style="color: rgb(8, 156, 255)"><%= etudiant.codePermanent%></b></h5>
          <p class="category">Université Alioune Diop de Bambey<p>
        </div>

      </div>

      <div class="content">
          <div class="row">

            <div class="col-lg-4">
              <div class="card card-body">
                <div class="card-header">
                  <h5 class="card-category">Mon solde</h5>
                  <h4 class="card-title"><strong><%= etudiant.solde %>  Fcfa</strong></h4>
                  <div class="dropdown">
                    <button type="button" class="btn btn-round btn-outline-default dropdown-toggle btn-simple btn-icon no-caret" data-toggle="dropdown">
                      <i class="now-ui-icons business_money-coins"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right">
                      <a class="dropdown-item" href="/achat"><strong>Faire un achat</strong></a>
                      <a class="dropdown-item" href="/transfert"><strong>Dépot dans un compte</strong></a></div>
                  </div>
                </div>
              </div>
            </div>        

            
            <div class="col-lg-4"><!-- col-md-6 -->
              <div class="card card-body">
                <div class="card-header">
                  <h5 class="card-category">Statut de ma carte</h5>
                  <% if (etudiant.etatCarte == 1) { %>                      
                    <h4 class="card-title text-green"><strong style="color:rgb(8, 156, 255);"> Activée</strong></h4>
                  <% } %>

                  <% if (etudiant.etatCarte == 0) { %>
                    <h4 class="card-title text-green"><strong style="color: red;"> Désactivée</strong></h4>
                  <% } %>
                  <div class="dropdown">
                    <button type="button" class="btn btn-round btn-outline-default dropdown-toggle btn-simple btn-icon no-caret" data-toggle="dropdown" disabled>
                      <i class="now-ui-icons shopping_credit-card"></i>
                    </button>
                  </div>
              </div>
             </div>
            </div>       

          
            <div class="col-lg-4">
              <div class="card card-body">
                <div class="card-header">
                  <h5 class="card-category">Faire un alerte</h5>
                  <h4 class="card-title text-"><strong>Appuyer sur la cloche</strong></h4>
                  <div class="dropdown">
                    <button type="button" class="btn btn-round btn-outline-default dropdown-toggle btn-simple btn-icon no-caret" data-toggle="dropdown">
                      <i class="now-ui-icons ui-1_bell-53"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right">
                      <a class="dropdown-item" href="#"><strong> Signaler une perte</strong></a>
                      <% if (etudiant.etatCarte == 1) { %>
                        <form action="/carte" method="POST">
                           <button type="submit" class="dropdown-item text"><strong style="color:red;"> Désactiver sa carte</strong></button>
                        </form>
                        <% } %>
                      <% if (etudiant.etatCarte == 0) { %>
                        <form action="/carte" method="POST">
                           <button  type="submit" class="dropdown-item text"><strong style="color:rgb(8, 156, 255);"> Activer sa carte</strong></button>
                        </form>
                      <% } %>
                    </div>
                </div>
              </div>
            </div>
          
            </div>
        
          </div>
      
          <!--div class="content"-->
            <div class="row">
              <div class="col-lg-12">
                <div class="card card-body">
                  <div class="card-header">
                    <h5 class="card-category">Détail sur mon profil</h5>
                    <h4 class="card-title"> Prénom: <strong><%= etudiant.prenom %></strong></h4>
                    <h4 class="card-title"> Nom: <strong><%= etudiant.nom %></strong></h4>
                    <h4 class="card-title"> Date de naissance: <strong><%= etudiant.dateNaissance %></strong></h4>
                    <h4 class="card-title"> Lieu de naissance: <strong><%= etudiant.lieuNaissance %></strong></h4>
                    <h4 class="card-title"> Niveau: <strong><%= etudiant.niveau %></strong></h4>
                    <h4 class="card-title"> Faculté : <strong><%= etudiant.ufr %></strong></h4>
                    <h4 class="card-title"> Filière : <strong><%= etudiant.filiere %></strong></h4>
                    <h4 class="card-title"> Identifiant carte RFID: <strong><%= etudiant.idCarte %></strong></h4>
                    <div class="dropdown">
                      <button type="button" class="btn btn-round btn-outline-default dropdown-toggle btn-simple btn-icon no-caret" data-toggle="dropdown" disabled>
                        <i style="color:black" class="now-ui-icons ui-1_check"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <!--/div-->

      </div>
      

      <footer class="footer">
        <div class=" container-fluid ">
          <nav>
            <ul>
